<div class="row">
	<h1 class="text-center">Dashboard</h1>

	<div class="col-md-4">
		<h3 class="text-center">
			Books <%= link_to "New Product", new_product_path, class: "btn btn-primary btn-sm" %>
		</h3>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Available</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
        <% @products.each do |product| %>
				<tr>
					<td><%= product.id %></td>
          <td><%= link_to product.name, product_path(product) %></td>
					<td><%= product.availability %></td>
          	<td><%= link_to "edit", edit_product_path(product) %></td>
					<td></td>
				</tr>
				<% end %>
      </tbody>
 </table>
</div>

<div class="col-md-4">
  <h3 class="text-center">Purchased</h3>
</div>

<div class="col-md-4">
  <h3 class="text-center">Sales</h3>
</div>

</div>
