<div class="container">
	<div class="row">

		<div class="col-md-6">

			<%= image_tag @product.image.url(:thumb), class: "img-responsive" %>
		</div>

		<div class="col-md-6">
			<h3><%= @product.name %> by <%= @product.name %></h3>
			<p class="justify"><%= @product.description %></p>
			<h4 class="text-right">$<%= @product.price.to_f / 100 %></h4>

			<% if current_user %>

			<%= form_tag buy_path(slug: @product.slug) do  %>
			  <script
			    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
			    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
			    data-amount="	<%= @product.price %>"
			    data-name="Ambrosial"
			    data-description=" <%= @product.name %>"
			    data-email="<%= current_user.email %>"
			    data-locale="auto">
			  </script>
			<% end %>

			<% else %>
				<p>Please login first to Buy</p>
			<% end %>

	</div>

</div>
</div>
