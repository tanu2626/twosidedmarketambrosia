<div class="container">
	<div class="row">

		<div class="col-md-6">
			<%= image_tag @product.image.url(:thumb), class: "img-responsive" %>
		</div>

		<div class="col-md-6">
			<h3><%= @product.name %> by <%= @product.name %></h3>
			<p class="justify"><%= @product.description %></p>
			<h4 class="text-right">$<%= @product.price.to_f / 100 %></h4>
		</div>

	</div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
